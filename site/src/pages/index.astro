---
import HeroSection from "../components/HeroSection.astro";
import SubjectCard from "../components/SubjectCard.astro";
import PricingSection from "../components/PricingSection.astro";

const subjects = [
	{ title: "Math Tutoring", description: "Algebra, Calculus, and more!" },
	{ title: "Science Tutoring", description: "Physics, Chemistry, and Biology." },
	{ title: "Programming Tutoring", description: "Python, JavaScript, and web development." }
];

const pricePerHour = 30; // Update as needed
---

<HeroSection name="Your Name" image="/profile.jpg" buzzwords="Expert Tutor | 1-on-1 Learning | Personalized Lessons" />

<section class="subjects">
	{subjects.map((subject) => <SubjectCard {...subject} />)}
</section>

<PricingSection price={pricePerHour} />

<style>
	.subjects {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		justify-content: center;
		padding: 2rem;
	}
</style>
