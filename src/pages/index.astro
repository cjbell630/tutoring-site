---
import HeroSection from "../components/HeroSection.astro";
import SubjectCard from "../components/SubjectCard.astro";
import PricingSection from "../components/PricingSection.astro";

const subjects = [
    {title: "Math Tutoring", description: "Algebra, Calculus, and more!", bullets: ["bullet 1", "bullet 2"]},
    {title: "Science Tutoring", description: "Physics, Chemistry, and Biology.", bullets: ["bullet 1", "bullet 2"]},
    {title: "Programming Tutoring", description: "Python, JavaScript, and web development.", bullets: ["bullet 1", "bullet 2"]}
];

const pricePerHour = 30; // Update as needed
---
<HeroSection name="Your Name" image="/profile.jpg" buzzwords="Expert Tutor | 1-on-1 Learning | Personalized Lessons"/>

<section class="subjects">
    {subjects.map((subject) =>
            <SubjectCard {...subject}/>)}
</section>

<PricingSection price={pricePerHour}/>

<style>
    body {
        background-color: #F1E6F6; /* Soft pastel background for the whole page */
        margin: 0;
        font-family: 'Helvetica Neue', sans-serif;
        color: #5A2A8C;
    }

    .subjects {
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        justify-content: center;
        padding: 2rem;
        margin-top: 3rem;
    }

    section {
        margin-bottom: 2rem;
    }
</style>
