---
import HeroSection from "../components/HeroSection.astro";
import SubjectCard from "../components/SubjectCard.astro";
import ContactButton from "../components/ContactButton.astro";
import FAQSection from "../components/FAQSection.astro";
import SubjectsSection from "../components/SubjectsSection.astro";

const subjects = [
    {title: "Math Tutoring", description: "Algebra, Calculus, and more!", bullets: ["bullet 1", "bullet 2"], detailsTarget: "faq-english-details"},
    {title: "Science Tutoring", description: "Physics, Chemistry, and Biology.", bullets: ["bullet 1", "bullet 2"], detailsTarget: "faq-english-details"},
    {
        title: "Programming Tutoring",
        description: "Python, JavaScript, and web development.",
        bullets: ["bullet 1", "bullet 2"],
        detailsTarget: "faq-english-details"
    }
];
const faqs = [
    {id: "faq-location", q: "Where do you conduct your lessons?", a: "answer 1"},
    {id: "faq-kyoto-kobe", q: "I live in Kyoto or Kobe. Can I still take lessons with you?", a: "answer 1"},
    {id: "faq-first-lesson", q: "What exactly do you mean \"the first lesson is free\"?", a: "answer 1"},
    {id: "faq-english-details", q: "What are your English lessons like?", a: "answer 1"},
    {id: "faq-programming-details", q: "What are your programming lessons like?", a: "answer 1"},
    {id: "faq-other", q: "question1 ", a: "answer 1"},
];

const pricePerHour = 30; // Update as needed
---

<meta charset="utf-8">
<HeroSection name="Connor Bell" image="/profile.jpg" details="Expert Tutor | 1-on-1 Learning | Personalized Lessons"/>
<SubjectsSection subjects={subjects}></SubjectsSection>

<FAQSection faqs={faqs}/>
<ContactButton/>

<style>
    body {
        background-color: #F1E6F6; /* Soft pastel background for the whole page */
        margin: 0;
        font-family: 'Helvetica Neue', sans-serif;
        color: #5A2A8C;
    }

    section {
        margin-bottom: 2rem;
    }
</style>
