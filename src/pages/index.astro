---
import HeroSection from "../components/HeroSection.astro";
import SubjectCard from "../components/SubjectCard.astro";
import ContactButton from "../components/ContactButton.astro";
import FAQSection from "../components/FAQSection.astro";
import SubjectsSection from "../components/SubjectsSection.astro";

const subjects = [
    {
        title: "English 🔠",
        description: "Algebra, Calculus, and more!",
        bullets: ["bullet 1", "bullet 2"],
        detailsTarget: "faq-english-details"
    },
    {
        title: "Programming 💻",
        description: "Whether you have years of experience or are just starting out, let's learn to code!",
        bullets: ["Learn l ", "Learn"],
        detailsTarget: "faq-programming-details"
    }
];
const generalFAQs = [
    {id: "faq-contact", q: "🗓️ how do i schedule", a: "Click the button below to contact me on LINE!!"},
    {id: "faq-location", q: "📍 Where do you conduct your lessons?", a: "answer 1"},
    {id: "faq-kyoto-kobe", q: "I live in Kyoto or Kobe. Can I still take lessons with you?", a: "answer 1"},
    {id: "faq-contact", q: "🕒 How long are your lessons?", a: "sdf"},
    {id: "faq-first-lesson", q: "💸 What exactly do you mean \"the first lesson is free\"?", a: "answer 1"},
];

const englishFAQs = [
    {id: "faq-english-details", q: "What are your English lessons like?", a: "answer 1"},
]

const programmingFAQs = [
    {id: "faq-programming-details", q: "What are your programming lessons like?", a: "answer 1"},
    {
        id: "faq-programming-details",
        q: "📌 What languages do you teach?",
        a: "Python, Java, <br/>C, C++, C#, <br/>Web (HTML, CSS, JavaScript), <br/>Lua, Kotlin"
    },
]

const categories = [
    {name: "", faqs: generalFAQs},
    {name: "English", faqs: englishFAQs},
    {name: "Programming", faqs: programmingFAQs},
]

const pricePerHour = 30; // Update as needed
---

<meta charset="utf-8">
<HeroSection name="Connor Bell" image="/profile.jpg" details="Expert Tutor | 1-on-1 Learning | Personalized Lessons"/>
<SubjectsSection subjects={subjects}></SubjectsSection>

<FAQSection categories={categories}/>
<ContactButton/>

<style>
    body {
        background-color: #F1E6F6; /* Soft pastel background for the whole page */
        margin: 0;
        font-family: 'Helvetica Neue', sans-serif;
        color: #5A2A8C;
    }

    section {
        margin-bottom: 2rem;
    }
</style>
