---
const {name, details, image} = Astro.props;
---
<section class="hero">
    <div class="hero-profile">
        <img src={image} alt={name} class="hero-image"/>
        <h1>{name}</h1>
    </div>
    <div class="hero-banner">
        {details}
    </div>
</section>

<style>
    .hero {
        text-align: center;
        padding: 2.5rem 2rem;
        background-color: #E0BBE4; /* Soft Pastel Purple */
        color: #5A2A8C; /* Deep Purple */
        border-bottom: 4px solid #F7A8B8; /* Pastel Pink */
        display: flex;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-top: 0rem;
        margin-bottom: 0rem;
        color: #5A2A8C;
    }

    .hero p {
        font-size: 1.2rem;
        margin-top: 0.5rem;
        font-weight: 400;
        color: #5A2A8C;
    }

    .hero-profile {
        flex: 1;
    }

    .hero-banner {
        flex: 2;
    }

    .hero-image {
        width: 12rem;
        height: 12rem;
        border-radius: 50%;
        border: 4px solid #F7A8B8; /* Pastel Pink */
        object-fit: cover;
        margin-bottom: 1rem; /* Some space under the image */
    }
</style>
