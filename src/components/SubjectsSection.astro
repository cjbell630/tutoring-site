---
import SubjectCard from "./SubjectCard.astro";

const {subjects} = Astro.props;
---


<section class="subjects">
    <h2 class="subjects-header">What will you learn?</h2>
    <div class="subjects-container">
        {subjects.map(
            subject =>
                    <SubjectCard {...subject}/>
        )}
    </div>
</section>

<style>
    .subjects {
        padding: 2rem;
    }

    .subjects-header {
        font-size: 2.5rem;
        text-align: center;
    }

    .subjects-container {
        margin-top: 3rem;
        display: flex;
        flex-wrap: wrap;
        gap: 1.5rem;
        justify-content: center;
    }
</style>