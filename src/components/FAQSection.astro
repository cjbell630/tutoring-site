---
import QuestionAndAnswer from "./QuestionAndAnswer.astro";
const {faqs} = Astro.props;
---

<section class="faq">
    <div class="faq-inside">
        <h2>FAQ</h2>
        {faqs.map(faq => (
                <QuestionAndAnswer id={faq.id} question={faq.q} answer={faq.a}/>
        ))}
    </div>
</section>


<style>
    .faq {
        text-align: center;
        padding: 3rem 2rem;
        font-size: 1.5rem;
        display: flex;
        justify-content: space-around;
        font-weight: 700; /* Bold */
        background-color: #D1C4E9; /* Soft Pastel Lavender */
        color: #5A2A8C; /* Deep Purple */
    }

    .faq-inside {
        width: 50%;
        padding: 1rem 2rem;
        background-color: #e8e4f3; /* Soft Pastel Lavender */
        border-radius: 8px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.1);
    }
</style>