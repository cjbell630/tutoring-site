---
const {url} = Astro.props;
---

<a href={url}
   id="contact_button" class="c-btn_sns c-btn_line snipcss-ZZfaT">
    <span id="lt_line" class="c-btn_sns__label">で予約！</span>
</a>

<style>
    .c-btn_sns {
        overflow-wrap: break-word;
        text-decoration: none;
        outline: none;
        -webkit-text-size-adjust: 100%;
        font-family: 'Twemoji Country Flags', メイリオ, Meiryo, "Lucida Grande", "Hiragino Kaku Gothic Pro", "ヒラギノ角ゴ Pro W3", "ＭＳ Ｐゴシック", Arial, sans-serif !important;
        list-style: none;
        position: fixed;
        bottom: 4.6vh; /*og 20px -> 30px */
        right: 4.6vh; /*og 20px -> 30px*/
        z-index: 1000;
        display: block;
        height: 6.46vh /*42px*/;
        border-radius: 7px;
        line-height: 6.46vh /*42px*/;
        text-align: center;
        font-size: 2.15vh /*14px*/;
        box-sizing: border-box;
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transition for hover effect */
        transform: scale(1.3); /* og not present*/
    }

    .c-btn_sns:hover {
        transform: scale(1.4); /* Scale the button on hover og 1.1 */
        //box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.3); /* Make shadow more prominent */
    }

    @font-face {
        font-family: "Twemoji Country Flags";
        font-style: normal;
        /*src:url('chrome-extension://jhcpefjbhmbkgjgipkhndplfbhdecijh/assets/TwemojiCountryFlags.woff2') format('woff2');*/
        unicode-range: U+1F1E6-1F1FF, U+1F3F4, U+E0062-E0063, U+E0065, U+E0067, U+E006C, U+E006E, U+E0073-E0074, U+E0077, U+E007F;
    }

    @font-face {
        font-family: "Twemoji Country Flags";
        font-style: italic;
        /* Defined to prevent italic styled flags */
        /*src:url('chrome-extension://jhcpefjbhmbkgjgipkhndplfbhdecijh/assets/TwemojiCountryFlags.woff2') format('woff2');*/
        unicode-range: U+1F1E6-1F1FF, U+1F3F4, U+E0062-E0063, U+E0065, U+E0067, U+E006C, U+E006E, U+E0073-E0074, U+E0077, U+E007F;
    }

    .c-btn_line {
        background: url("https://c.bookwalker.jp/ex/scc/common/img/btn_icon_line.png") no-repeat #00C300;
        background-size: 6.46vh 6.46vh /*42px 42px*/;
    }

    .c-btn_line:hover {
        //background-color: #00e000;
        opacity: 1;
    }

    .c-btn_sns__label {
        padding: 0;
        border: 0;
        font: inherit;
        vertical-align: baseline;
        word-wrap: break-word;
        overflow-wrap: break-word;
        //display: block;
        margin: 0 0 0 6.46vh /*0 0 0 42px*/;
        font-weight: bold;
        color: #fff;
    }

    .c-btn_line span {
        border-left: 1px transparent;
    }

    .c-btn_line:hover span {
        border-left: 2px transparent;
    }
</style>